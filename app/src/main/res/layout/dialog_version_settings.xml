<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textViewVersionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:text="Versionの変更"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linerLayoutRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVersionTitle">

        <RadioGroup
            android:id="@+id/radioGroupVersion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/radioButtonFlower"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:buttonTint="@color/versionRadioButton"
                android:textColor="@color/versionRadioButton"
                android:textSize="16dp"
                android:text="Flower" />

            <RadioButton
                android:id="@+id/radioButtonJewelry"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:buttonTint="@color/versionRadioButton"
                android:textColor="@color/versionRadioButton"
                android:textSize="16dp"
                android:text="Jewelry" />

            <RadioButton
                android:id="@+id/radioButtonFashion"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:buttonTint="@color/versionRadioButton"
                android:textColor="@color/versionRadioButton"
                android:textSize="16dp"
                android:text="Fashion" />

            <RadioButton
                android:id="@+id/radioButtonFood"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:buttonTint="@color/versionRadioButton"
                android:textColor="@color/versionRadioButton"
                android:textSize="16dp"
                android:text="Food" />

            <RadioButton
                android:id="@+id/radioButtonOthers"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:buttonTint="@color/versionRadioButton"
                android:textColor="@color/versionRadioButton"
                android:textSize="16dp"
                android:text="Others" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/linerLayoutRadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/textViewVersionTitle">

        <LinearLayout
            android:id="@+id/linearLayoutIconsFlower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewIconFlower1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconFlower2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconFlower3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconFlower4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutIconsJewelry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewIconJewelry1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconJewelry2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconJewelry3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconJewelry4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutIconsFashion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewIconFashion1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconFashion2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconFashion3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconFashion4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutIconsFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewIconFood1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconFood2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconFood3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconFood4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutIconsOthers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewIconOthers1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconOthers2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconOthers3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/imageViewIconOthers4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/linerLayoutRadioGroup">
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <Button
            android:id="@+id/buttonSaveClose"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_rounded_corners_10dp"
            android:minHeight="0dp"
            android:text="変更する"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <Button
            android:id="@+id/buttonCancelClose"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_rounded_corners_10dp"
            android:drawableLeft="@drawable/ic_house_36px"
            android:drawablePadding="6dp"
            android:drawableTint="#FFFFFF"
            android:gravity="left|center"
            android:minHeight="0dp"
            android:text="一覧に戻る"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>