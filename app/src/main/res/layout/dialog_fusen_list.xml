            android:id="@+id/imageViewFusen05"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:tag="fusen_05"
            app:srcCompat="@drawable/fusen_05" />
        <ImageView
            android:id="@+id/imageViewFusen06"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:tag="fusen_06"
            app:srcCompat="@drawable/fusen_06" />
